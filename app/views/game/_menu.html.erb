<div class='menu_window'>

	<div><button id="menuBtn" class='icon icons8-Menu-principal'></button></div>	

	<!-- <div id="menuModal" class="modal"> -->
	<dialog id="menuModal" close>
	  <!-- Modal content -->
	  <!-- <div class="modal-content"> -->
	    <span class="menuclose">&times;</span>
	    <p><%= t (".optionmenu") %></p>
		<%= button_to( t(".FRlanguage"), french_path, :class => "button") %>
		<%= button_to( t(".ENlanguage"), english_path, :class => "button") %>
	  <!-- </div> -->
  	</dialog>
	<!-- </div> -->

	<script>		
		var modal = document.getElementById('menuModal');			// Get the modal
		var btn = document.getElementById("menuBtn");				// Get the button that opens the modal		
		var span = document.getElementsByClassName("menuclose")[0];		// Get the <span> element that closes the modal
		// When the user clicks the button, open the modal 
		btn.onclick = function() {
		    modal.style.display = "block";
		}
		// When the user clicks on <span> (x), close the modal
		span.onclick = function() {
		    modal.style.display = "none";
		}
		// When the user clicks anywhere outside of the modal, close it
		window.onclick = function(event) {
		    if (event.target == modal) {
		        modal.style.display = "none";
		    }
		}
	</script>

</div>